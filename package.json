{
  "name": "aquamart-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "AquaMart - MERN eCommerce platform",
  "scripts": {
    "postinstall": "cd server && npm i --silent && cd ../client && npm i --silent",
    "dev": "concurrently \"npm:server\" \"npm:client\"",
    "server": "cd server && nodemon index.js",
    "client": "cd client && vite",
    "build": "cd client && vite build",
    "start": "cd server && node index.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  }
}


